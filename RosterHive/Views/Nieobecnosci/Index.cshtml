@model List<RosterHive.Models.TimeOffRequest>
@using RosterHive.Models
@{
    ViewData["Title"] = "Moje nieobecności";
    var error = ViewBag.Error as string;
    var success = ViewBag.Success as string;
    var conflictMap = ViewBag.ConflictMap as Dictionary<int, bool> ?? new Dictionary<int, bool>();
}

<h1>Moje nieobecności</h1>
<hr />

@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}

<div class="d-flex gap-2 mb-3">
    <a class="btn btn-primary" asp-action="Utworz">Złóż wniosek</a>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-outline-secondary" asp-action="Panel">Panel akceptacji</a>
    }
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-info">Nie masz jeszcze żadnych wniosków.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Zespół</th>
                <th>Typ</th>
                <th>Zakres</th>
                <th>Status</th>
                <th>Konflikt z grafikiem</th>
                <th style="width: 1%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                var conflict = conflictMap.ContainsKey(r.Id) ? conflictMap[r.Id] : false;

                <tr>
                    <td>@r.Team.Name</td>
                    <td>@r.Type</td>
                    <td>@r.StartDate.ToString("yyyy-MM-dd") – @r.EndDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (r.Status == TimeOffStatus.Oczekuje)
                        {
                            <span class="badge bg-secondary">Oczekuje</span>
                        }
                        @if (r.Status == TimeOffStatus.Zatwierdzony)
                        {
                            <span class="badge bg-success">Zatwierdzony</span>
                        }
                        @if (r.Status == TimeOffStatus.Odrzucony)
                        {
                            <span class="badge bg-danger">Odrzucony</span>
                        }
                        @if (r.Status == TimeOffStatus.Anulowany)
                        {
                            <span class="badge bg-dark">Anulowany</span>
                        }
                    </td>
                    <td>
                        @if (conflict)
                        {
                            <span class="badge bg-warning text-dark">Tak</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Nie</span>
                        }
                    </td>
                    <td>
                        @if (r.Status == TimeOffStatus.Oczekuje)
                        {
                            <form method="post" asp-action="Anuluj" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@r.Id" />
                                <button class="btn btn-sm btn-outline-danger" type="submit">Anuluj</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
