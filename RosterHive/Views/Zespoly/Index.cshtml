@model List<RosterHive.Models.Team>
@{
    ViewData["Title"] = "Moje zespoły";
}

<h1>Moje zespoły</h1>
<hr />

<div class="mb-3">
    <a class="btn btn-outline-primary" asp-action="Dolacz">Dołącz do zespołu</a>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-primary ms-2" asp-action="Utworz">Utwórz zespół</a>
    }
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        Nie należysz jeszcze do żadnego zespołu.
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Opis</th>
                <th style="width: 1%"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Name</td>
                <td>@t.Description</td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Szczegoly" asp-route-id="@t.Id">Szczegóły</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
