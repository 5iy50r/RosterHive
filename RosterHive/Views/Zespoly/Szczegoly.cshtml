@model RosterHive.ViewModels.TeamDetailsViewModel
@{
    ViewData["Title"] = "Szczegóły zespołu";
    var error = ViewBag.Error as string;
    var success = ViewBag.Success as string;
}

<h1>Szczegóły zespołu</h1>
<hr />

@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}

<div class="d-flex justify-content-between align-items-start mb-3">
    <div>
        <h3 class="mb-1">@Model.Name</h3>
        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <div class="text-muted">@Model.Description</div>
        }
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-outline-primary" asp-controller="Zadania" asp-action="Zespol" asp-route-teamId="@Model.Id">Zadania zespołu</a>
        <a class="btn btn-outline-primary" asp-controller="Grafik" asp-action="Zespol" asp-route-teamId="@Model.Id">Grafik zespołu</a>

        @if (Model.CanManageMembers)
        {
            <a class="btn btn-outline-danger" asp-action="Usun" asp-route-id="@Model.Id">Usuń zespół</a>
        }
    </div>
</div>

@if (Model.ShowJoinCode)
{
    <div class="alert alert-secondary">
        <strong>Kod dołączenia:</strong> @Model.JoinCode
    </div>
}

@if (Model.CanManageMembers)
{
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title mb-3">Dodaj użytkownika do zespołu</h5>

            @if (Model.AvailableUsers.Count == 0)
            {
                <div class="alert alert-info mb-0">Wszyscy użytkownicy są już w zespole.</div>
            }
            else
            {
                <form method="post" asp-action="DodajCzlonka" class="row g-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="teamId" value="@Model.Id" />

                    <div class="col-md-8">
                        <label class="form-label">Użytkownik</label>
                        <select class="form-select" name="userIdToAdd" required>
                            @foreach (var u in Model.AvailableUsers)
                            {
                                <option value="@u.UserId">@u.Email</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Dodaj</button>
                    </div>
                </form>
            }
        </div>
    </div>
}

@if (Model.CanManageTeamRoles)
{
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title mb-3">Zarządzanie rolami w zespole</h5>

            <form method="post" asp-action="UstawRoleWZespole" class="row g-2">
                @Html.AntiForgeryToken()
                <input type="hidden" name="teamId" value="@Model.Id" />

                <div class="col-md-6">
                    <label class="form-label">Użytkownik</label>
                    <select class="form-select" name="selectedUserId" required>
                        @foreach (var m in Model.Members)
                        {
                            <option value="@m.UserId">@m.Email</option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Rola w zespole</label>
                    <select class="form-select" name="selectedTeamRole" required>
                        <option value="Pracownik">Pracownik</option>
                        <option value="Kierownik">Kierownik</option>
                    </select>
                </div>

                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Zapisz</button>
                </div>
            </form>

            <div class="text-muted mt-2">
                Kierownik zespołu może być tylko jeden. Aby „zabrać” rolę kierownika, ustaw innego użytkownika jako kierownika.
            </div>
        </div>
    </div>
}

<h4>Członkowie</h4>

@if (Model.Members.Count == 0)
{
    <div class="alert alert-info">Brak członków w zespole.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>E-mail</th>
                <th>Dołączono</th>
                <th>Rola w zespole</th>
                <th style="width: 1%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model.Members)
            {
                <tr>
                    <td>@m.Email</td>
                    <td>@m.JoinedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@(m.IsOwner ? "Kierownik" : "Pracownik")</td>
                    <td>
                        @if (Model.CanManageMembers && !m.IsOwner)
                        {
                            <form method="post" asp-action="UsunCzlonka">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="teamId" value="@Model.Id" />
                                <input type="hidden" name="teamMemberId" value="@m.TeamMemberId" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Usuń</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    <a class="btn btn-outline-secondary" asp-action="Index">Wróć</a>
</div>
