@model RosterHive.ViewModels.ShiftSwapCreateViewModel
@{
    ViewData["Title"] = "Złóż prośbę o podmianę";
}

<h1>Złóż prośbę o podmianę</h1>
<hr />

@if (Model.Teams.Count == 0)
{
    <div class="alert alert-info">Nie należysz do żadnego zespołu. Dołącz do zespołu, aby składać podmiany.</div>
    <a class="btn btn-outline-secondary" asp-action="Index">Wróć</a>
}
else
{
    <form method="get" asp-action="Utworz" class="row g-2 mb-3">
        <div class="col-md-8">
            <label class="form-label">Zespół</label>
            <select class="form-select" name="teamId">
                @foreach (var t in Model.Teams)
                {
                    <option value="@t.Id" selected="@(Model.TeamId == t.Id)">@t.Name</option>
                }
            </select>
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <button class="btn btn-outline-primary w-100" type="submit">Wybierz</button>
        </div>
    </form>

    @if (Model.Shifts.Count == 0)
    {
        <div class="alert alert-info">Nie masz przyszłych zmian w tym zespole, które można podmienić.</div>
        <a class="btn btn-outline-secondary" asp-action="Index">Wróć</a>
    }
    else
    {
        <form method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="TeamId" />

            <div class="mb-3">
                <label class="form-label">Zmiana do podmiany</label>
                <select class="form-select" asp-for="ShiftId" required>
                    @foreach (var s in Model.Shifts)
                    {
                        <option value="@s.Id" selected="@(Model.ShiftId == s.Id)">@s.Label</option>
                    }
                </select>
                <span asp-validation-for="ShiftId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Adresat (opcjonalnie)</label>
                <select class="form-select" asp-for="RequestedToUserId">
                    <option value="">Ogólnie (kto pierwszy ten lepszy)</option>
                    @foreach (var u in Model.Users)
                    {
                        <option value="@u.UserId" selected="@(Model.RequestedToUserId == u.UserId)">@u.Label</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Wiadomość (opcjonalnie)</label>
                <textarea class="form-control" asp-for="Message" rows="3"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <button class="btn btn-primary" type="submit">Utwórz prośbę</button>
            <a class="btn btn-outline-secondary ms-2" asp-action="Index">Anuluj</a>
        </form>

        @section Scripts {
    <partial name="_ValidationScriptsPartial" />
        }
    }
}
